doctype html
html

  head
    title grid_12
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto+Condensed')
    link(rel='stylesheet' href='../css/example-nesting.css')

  body
    main
      .content
        .grid-wrapper.wrapper_12
          .grid-container.container_12
            .grid-zone.grid_6
              each column in [6]
                include includes/grid-blok
            .grid-zone.grid_6
              each column in [3, 3]
                include includes/grid-blok
            .grid-zone.grid_6
              .grid-blok.grid_6
                .grid-element
                  .grid-edge
                    .grid-nesting
                      each column in [6]
                        include includes/grid-blok
            .grid-zone.grid_6
              .grid-blok.grid_6
                .grid-element
                  .grid-edge
                    .grid-nesting
                      each column in [3, 3]
                        include includes/grid-blok
            .clear
